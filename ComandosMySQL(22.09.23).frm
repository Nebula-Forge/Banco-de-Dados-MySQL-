/*USA A DATABASE Consultorio*/
USE Consultorio;

/*CRIA A TABLE Cliente E ADICIONA, ID, STATUS, CPF, NOME, SEXO, DATA_NASCIMENTO*/
CREATE TABLE Cliente
(
ID_CLIENTE INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
`STATUS` VARCHAR(40) NULL,
CPF CHAR(11) UNIQUE,
NOME VARCHAR(100) NULL,
SEXO CHAR(1) NULL,
DATA_NASCIMENTO DATETIME NULL
);

